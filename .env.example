# ========================================
# 服务器端环境变量配置
# ========================================

# API Keys (后端默认配置，可选)
OPENAI_API_KEY=sk-your-openai-api-key
GEMINI_API_KEY=AIza-your-gemini-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# API Endpoints (可选，用于自定义 API 端点)
# 默认使用中转 API
OPENAI_BASE_URL=https://apipro.maynor1024.live/v1
GEMINI_API_URL=https://apipro.maynor1024.live
ANTHROPIC_BASE_URL=https://apipro.maynor1024.live/v1

# Models (默认模型选择)
OPENAI_MODEL=gpt-4o
GEMINI_MODEL=gemini-2.0-flash
ANTHROPIC_MODEL=claude-3-sonnet
IMAGE_MODEL=gemini-3-pro-image-preview

# Concurrency Settings
HIGH_CONCURRENCY=false

# ========================================
# 部署配置
# ========================================

# File Storage (for Vercel)
# 使用 Vercel Blob 或其他云存储
VERCEL_BLOB_TOKEN=your-vercel-blob-token
VERCEL_BLOB_STORE_URL=https://your-store.vercel-blob.com

# History Persistence (for Render)
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://user:password@host:port

# CORS Settings
ALLOWED_ORIGINS=https://your-domain.vercel.app,https://your-domain.com

# ========================================
# 前端环境变量配置 (VITE_ 前缀)
# ========================================

# 注意：这些变量是前端的默认配置，用户可以在设置页面覆盖

# OpenAI 配置
VITE_OPENAI_API_KEY=sk-your-openai-api-key
VITE_OPENAI_BASE_URL=https://apipro.maynor1024.live/v1
VITE_OPENAI_MODEL=gpt-4o

# Google Gemini 配置
VITE_GEMINI_API_KEY=AIza-your-gemini-api-key
VITE_GEMINI_API_URL=https://apipro.maynor1024.live
VITE_GEMINI_MODEL=gemini-2.0-flash

# Anthropic Claude 配置
VITE_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
VITE_ANTHROPIC_BASE_URL=https://apipro.maynor1024.live/v1
VITE_ANTHROPIC_MODEL=claude-3-sonnet

# 图片生成配置
VITE_IMAGE_MODEL=gemini-3-pro-image-preview
VITE_DALL_E_MODEL=dall-e-3
VITE_HIGH_CONCURRENCY=false

# 自定义 API 端点
VITE_CUSTOM_API_ENDPOINT=https://your-custom-api.com
VITE_CUSTOM_API_MODEL=your-custom-model

# 功能开关
VITE_ENABLE_LOCAL_CONFIG=true
VITE_ENABLE_CUSTOM_PROVIDERS=true
VITE_DEFAULT_USE_LOCAL_CONFIG=false

# 主题配置
VITE_DEFAULT_THEME=light
VITE_PRIMARY_COLOR=#3b82f6